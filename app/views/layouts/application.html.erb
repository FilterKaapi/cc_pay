<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= render "layouts/stylesheets" %>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<%= render "layouts/header" %>
		<% flash.each do |key, value|  %>
			<div class="span 12">
				<div class="alert-message <%= key %>"><%= value %></div>
			</div>
		<% end %>
		<div class="container">
			<%= yield %>
		</div>
	</body>
	<%= render "layouts/footer" %>
</html>
